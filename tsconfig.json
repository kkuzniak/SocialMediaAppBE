{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "strictNullChecks": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*", "./*.ts", "./*.js", "tests/**/*.test.ts", "tests/*.ts", "webpack.config.cjs"],
}
